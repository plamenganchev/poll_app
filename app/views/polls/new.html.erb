<div class="col-md-2 col-md-offset-3 whitebackground">
<%= form_for @poll,remote: true do |f| %>
<div class="field">
<div class="form-group">
<%= f.label :question %>
   <br/>
<%= f.text_area :question, class: "form-control textfieldcolor" %>
</div>
</div>

<div id='tasks'>
<%= f.fields_for :answers do |answers_builder| %>
<%= render 'answer_fields', :f => answers_builder %>
 <%end%>
<div class='links'>
<%= link_to_add_association 'add answer', f, :answers ,class: "btn btn-primary" %>
<%= f.submit 'Create Poll', class: "btn btn-primary" %>
      </div>
 </div>

<%end%>
</div>
<div id="graph">
 
</div>
