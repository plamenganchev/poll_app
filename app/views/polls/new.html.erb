<%= form_for @poll,remote: true do |f| %>
 <div class="field">
  <%= f.label :question %>
   <br/>
<%= f.text_area :question %>
</div>
 <h3>Answers</h3>
 <div id='tasks'>
 <%= f.fields_for :answers do |answers_builder| %>
 <%= render 'answer_fields', :f => answers_builder %>
 <%end%>
 <div class='links'>
  <%= link_to_add_association 'add answer', f, :answers %>
      </div>
 </div>
 <%= f.submit 'Submit' %>
<%end%>
